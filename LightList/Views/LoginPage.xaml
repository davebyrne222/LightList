<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LightList.Views.LoginPage"
             Title="Sign In"
             Shell.NavBarIsVisible="True">

            <ContentPage.Content>
                <VerticalStackLayout Spacing="10" Margin="20" VerticalOptions="Center">
                    
                    <Label Text="" x:Name="LoginStatusLbl"></Label>
                    
                    <Button x:Name="SignInBtn"
                            Text="Sign In"
                            Clicked="OnLoginButtonClicked"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            IsVisible="False"/>
                    
                    <Button Text="Close"
                            Clicked="OnCloseButtonClicked"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"/>
                    
                </VerticalStackLayout>
        </ContentPage.Content>
</ContentPage>