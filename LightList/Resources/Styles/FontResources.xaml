<?xml version="1.0" encoding="UTF-8"?>
<?xaml-comp compile="true" ?>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Font Sizes -->
    <x:Double x:Key="TitleFontSize">22</x:Double>
    <x:Double x:Key="SubtitleFontSize">18</x:Double>
    <x:Double x:Key="BodyFontSize">14</x:Double>
    <x:Double x:Key="SmallFontSize">12</x:Double>

    <!-- Font Families -->
    <OnPlatform x:Key="PrimaryFontFamily" x:TypeArguments="x:String">
        <On Platform="iOS" Value="OpenSans-Regular" />
    </OnPlatform>

    <OnPlatform x:Key="BoldFontFamily" x:TypeArguments="x:String">
        <On Platform="iOS" Value="OpenSansSemiBold" />
    </OnPlatform>

</ResourceDictionary>